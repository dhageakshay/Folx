<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginStart="8dp"
	android:layout_marginEnd="8dp"
	android:layout_marginTop="4dp"
	android:layout_marginBottom="4dp"
	android:background="@drawable/rounded_rectangle_grey"
	android:orientation="horizontal">

	<ImageView
		android:id="@+id/favRestImage"
		android:layout_width="60dp"
		android:layout_height="60dp"
		android:background="@drawable/rounded_rectangle_grey"
		app:srcCompat="@drawable/ic_add_photo_alternate_24px"
		android:layout_marginStart="8dp"
		android:layout_weight="0.1"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="60dp"
		android:orientation="vertical"
		android:layout_marginEnd="16dp"
		android:layout_weight="0.6">

		<TextView
			android:id="@+id/favRestName"
			android:layout_width="180dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="16dp"
			android:layout_marginTop="2dp"
			android:layout_marginBottom="2dp"
			android:text="Restaurant"
			android:textSize="12sp"
			android:textColor="@color/colorPrimary"/>

		<TextView
			android:id="@+id/favRestAddress"
			android:maxLines="2"
			android:lines="2"
			android:layout_width="180dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:layout_marginStart="16dp"
			android:layout_marginTop="2dp"
			android:layout_marginBottom="2dp"
			android:text="Address"
			android:textSize="10sp"/>

	</LinearLayout>
	
	<ImageView
		android:id="@+id/favRestDelete"
		android:layout_width="50dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center_vertical|end"
		app:srcCompat = "@drawable/ic_delete_24px"
		android:layout_marginEnd="8dp"
		android:layout_weight="0.3"/>


</LinearLayout>